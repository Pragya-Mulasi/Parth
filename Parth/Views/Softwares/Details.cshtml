@model Parth.Models.Software

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Software</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SoftwareName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoftwareName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Version)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Version)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vendor)
        </dd>

    </dl>
</div>

<table class="table">
    <tr>
        <th>
            HardwareId
        </th>
        <th>
            Model
        </th>
        <th>
            Operating System
        </th>
        <th>
            Company
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Assets)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HardwareId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hardware.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hardware.OS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hardware.Company)
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SoftwareId }) |
